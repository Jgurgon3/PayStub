<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LogInActivity"
    android:background="@drawable/background2"
    android:id="@+id/LoginPage">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2.username"
        android:textColorLink="@android:color/black"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_above="@+id/editText3.password"
        android:inputType="text"
        android:hint="USERNAME"
        android:gravity="center"/>

    <ImageButton
        android:layout_width="94dp"
        app:srcCompat="@drawable/selectstadiumgobutton"
        android:id="@+id/imageButton9"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3.password"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColorLink="@android:color/black"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/black"
        android:hint="PASSWORD"
        android:gravity="center"
        android:layout_above="@+id/imageButton9"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/logo5"
        android:id="@+id/imageView4"
        android:cropToPadding="true"
        android:adjustViewBounds="false"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/editText2.username"
        android:layout_alignParentStart="true" />

</RelativeLayout>
